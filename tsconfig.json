    "compilerOptions": {
        "strict": true,
        "target": "ES6",
        "lib": ["ES2015","ES2016","ES2017","ES2018","ES2019","ES2020","DOM"],
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "module": "CommonJS",
        "outDir" : "./build",
        // "typeRoots": ["./src/types","./node_modules/@types"]
    },
        "include": ["src/**/*.ts"],
        "exclude": ["node_modules","./build","./src/**/**.test.ts"],
}